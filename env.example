# Database Configuration
# Для локальной разработки используйте PostgreSQL
# Для продакшена можно использовать Neon, Supabase, или другой PostgreSQL хостинг
DATABASE_URL=postgresql://user:password@localhost:5432/traderplus

# Session Secret
# Сгенерируйте случайную строку для безопасности сессий
# Можно использовать: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Cookie Configuration
COOKIE_SECURE=false
COOKIE_MAX_AGE=604800000

# Optional: API Keys для интеграций (если планируется)
# BINANCE_API_KEY=
# BINANCE_API_SECRET=
# COINBASE_API_KEY=
# COINBASE_API_SECRET=

